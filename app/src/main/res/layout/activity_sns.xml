<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SnsActivity"
    android:orientation="vertical">


    // 회의록 테마에서 댓글 입력이후 화면

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_above="@id/et_name"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:onClick="clickImage"
        android:src="@drawable/logo_transparent"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerInParent="true"
        android:hint="닉네임을 설정해주세요"
        android:textColorHint="	#708090"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="8dp"
        app:backgroundTint="#6799FF"
        android:background="@drawable/back_et_name"
        android:textCursorDrawable="@drawable/et_name_cursor"/>


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="입장"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/btn_singup"
        android:onClick="clickBtn"
        app:backgroundTint="@null"/>


</LinearLayout>