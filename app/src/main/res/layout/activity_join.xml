<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/et_logo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            android:foregroundGravity="center"
            android:src="@drawable/logo_transparent"
            tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/jo_id"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="프로젝트 명"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/jo_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="참여인원"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/jo_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/jo_id"
        app:layout_constraintTop_toBottomOf="@+id/jo_id" />

    <EditText
        android:id="@+id/jo_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="프로젝트 개요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/jo_pass"
        app:layout_constraintStart_toStartOf="@+id/jo_pass"
        app:layout_constraintTop_toBottomOf="@+id/jo_pass" />

    <EditText
        android:id="@+id/jo_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="기대효과"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/jo_email"
        app:layout_constraintStart_toStartOf="@+id/jo_email"
        app:layout_constraintTop_toBottomOf="@+id/jo_email" />

    <Button
        android:id="@+id/jo_register"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="프로젝트 생성"
        app:backgroundTint="#6799FF"
        app:layout_constraintEnd_toEndOf="@+id/jo_number"
        app:layout_constraintStart_toStartOf="@+id/jo_number"
        app:layout_constraintTop_toBottomOf="@+id/jo_number" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>